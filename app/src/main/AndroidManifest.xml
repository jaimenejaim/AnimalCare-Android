<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jaimenejaim.android.animalcare">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.splash.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.home.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.signin.SignInActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.new_animal.NewAnimalActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.my_animals_detail.MyAnimalsDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.signup.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.my_account.MyAccountActivity"
            android:label="@string/title_activity_my_account"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.plans_payments.PlansPaymentsActivity"
            android:label="@string/title_activity_plans_payments"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.evaluation.EvaluationActivity"
            android:label="@string/title_activity_evaluation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.instructions.InstructionsActivity"
            android:label="@string/title_activity_instructions"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.friend_care.FriendCareActivity"
            android:label="@string/title_activity_friend_care"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>